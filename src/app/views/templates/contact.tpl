{include file="layout/header.tpl"}

<section>
    <h1 class="text-center shadow p-3 mb-5 bg-body rounded">{$tittle}</h1>
    <div class="container">
        <section class="section__contact row">
            <article class="section__contact__card col-6 col-md-4 col-lg-4">
                <header>
                    <img src="/assets/instagram_icon.png" alt="instagram icon" class="card-img-top">
                    <h5 class="card-title">Instagram</h5>
                </header>
                <a href="https://www.instagram.com" class="btn btn-primary" target="_blank">Ver Perfil</a>
            </article>
            <article class="section__contact__card col-12 col-md-6 col-lg-4">
                <header>
                    <img src="/assets/facebook_icon.png" alt="facebook icon" class="card-img-top">
                    <h5 class="card-title">Facebook</h5>
                </header>
                <a href="https://www.facebook.com" class="btn btn-primary" target="_blank">Ver Perfil</a>
            </article>
            <article class="section__contact__card col-12 col-md-6 col-lg-4">
                <header>
                    <img src="/assets/whatsapp_icon.png" alt="whatsapp icon" class="card-img-top">
                    <h5 class="card-title">Whatsapp</h5>
                </header>
                <a href="https://www.whatsapp.com" class="btn btn-primary" target="_blank">Ver Perfil</a>
            </article>
        </section>
    </div>
</section>

{include file="layout/footer.tpl"}
